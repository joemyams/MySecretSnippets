// Display Post excerpt.


function new_excerpt_more ($more){
			global $post;
			return '... <a classs ="moretag" href ="' . get_premalink ($post->ID) . '"> continue reading </a>

}

add_filter('excerpt_more', 'new_excerpt_more');


